<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#492f24"
    tools:context=".IncomingHomePage">

    <ImageView
        android:id="@+id/incomingHomePageImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/uwyoabroad" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:text="@string/incoming_home_page"
        android:textColor="#ffc425"
        android:textSize="19dp"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintBottom_toTopOf="@+id/aboutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incomingHomePageImg" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:background="#ffc425"
        android:text="About UW"
        android:textColor="#492f24"
        android:textSize="25dp"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintBottom_toTopOf="@+id/laramieButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/laramieButton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:background="#ffc425"
        android:text="Laramie, WY"
        android:textColor="#492f24"
        android:textSize="25dp"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintBottom_toTopOf="@+id/degreeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutButton" />

    <Button
        android:id="@+id/degreeButton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:background="#ffc425"
        android:text="Areas of Study"
        android:textColor="#492f24"
        android:textSize="25dp"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintBottom_toTopOf="@+id/campusMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/laramieButton" />

    <Button
        android:id="@+id/campusMap"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:background="#ffc425"
        android:text="Campus Map"
        android:textColor="#492f24"
        android:textSize="27dp"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degreeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>