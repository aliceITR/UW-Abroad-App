<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:contentPadding="5dp"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/majorNameBox"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:background="#492f24"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="25dp"
            android:textColor="#FDC82F"
            android:fontFamily="@font/montserratbold"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/bachelorsCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#492f24"
                android:textSize="13dp"
                android:text="Bachelors"
                android:fontFamily="@font/montserratbold"
                android:textColor="#ffc425" />

            <CheckBox
                android:id="@+id/mastersCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#492f24"
                android:textSize="13dp"
                android:text="Masters"
                android:fontFamily="@font/montserratbold"
                android:textColor="#ffc425" />

            <CheckBox
                android:id="@+id/doctorateCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#492f24"
                android:textSize="13dp"
                android:text="Doctorate"
                android:fontFamily="@font/montserratbold"
                android:textColor="#ffc425" />

            <CheckBox
                android:id="@+id/otherCheck"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:background="#492f24"
                android:textSize="13dp"
                android:text="Other"
                android:fontFamily="@font/montserratbold"
                android:textColor="#ffc425" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>